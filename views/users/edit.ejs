<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">EDIT USER</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/users/<%= user.username %>/profile?_method=PUT" method="POST">
            <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control" type="username" name="username" placeholder="Username" value="<%=user.username%>"readonly>
                </div>
                <div class="form-group">
                    <label>E-mail</label>
                    <input class="form-control" type="email" name="email" placeholder="E-mail" value="<%=user.email%>" readonly>
                </div>
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" placeholder="..." value="<%=user.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Confirm!</button>
                </div>
            </form>
            <a href="/users">Go Back</a>
        </div>
    </div>
    <% include ../partials/footer %>