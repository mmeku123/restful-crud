<% include ../partials/header %>
  <div class="container">
    <div class="page-header">
      <h1>Edit/Delete <small>Manage User Database</small></h1>
      <br>
    </div>
    <a href="/users/new"><button type="button" class="btn btn-primary">New..</button></a>
    <h2>Admins</h2>
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Email</th>
          <th>Description</th>
        </tr>
      </thead>
      <% data.forEach(function(user) { %>
        <% if(user.role == "Admin" ) { %>
          <tbody>
            <tr>
              <th scope="row">
                <%= user.id %>
              </th>
              <td>
                <%= user.username %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.description %>
              </td>
              <td>
                <a href="/users/<%= user.username %>/profile"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>

              </td>
              <td>
              <% if(user.username != currentUser.username) { %>
                <a class="glyphicon glyphicon-remove" href="/users/<%= user.username %>/delete" onclick="return confirm('Are you sure you want to delete\n admin <%= user.username %> ?');"></a>
              <% } %>
              </td>
            </tr>
          </tbody>
          <% }}); %>
    </table>
    <br>
    <h2>Users</h2>
    <table class="table">
      <thead class="thead-inverse">
        <tr>
          <th>#</th>
          <th>Username</th>
          <th>Email</th>
          <th>Description</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% data.forEach(function(user) { %>
        <% if(user.role == "User" ) { %>
          <tbody>
            <tr>
              <th scope="row">
                <%= user.id %>
              </th>
              <td>
                <%= user.username %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.description %>
              </td>
              
              <td>
                <a href="/users/<%= user.username %>/profile"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
              </td>
              <td>
                <a class="glyphicon glyphicon-remove" href="/users/<%= user.username %>/delete" onclick="return confirm('Are you sure you want to delete\n user <%= user.username %> ?');"></a>
              </td>
            </tr>
          </tbody>
          <% }}); %>
    </table>
  </div>
  <% include ../partials/footer %>